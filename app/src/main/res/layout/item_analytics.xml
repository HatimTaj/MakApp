<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?attr/colorSurfaceVariant"
    android:layout_marginBottom="8dp">

    <TextView android:id="@+id/tvDealerName" android:text="Dealer Name" android:textSize="16sp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvLitres" android:text="1000 L" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>