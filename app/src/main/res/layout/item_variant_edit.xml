<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceVariant"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText android:id="@+id/etSize" android:hint="Size (1L)" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="14sp"/>
        <EditText android:id="@+id/etCapacity" android:hint="Pcs/Box" android:inputType="number" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="14sp"/>
        <ImageButton android:id="@+id/btnDeleteVariant" android:src="@android:drawable/ic_menu_delete" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="32dp" android:layout_height="32dp" android:tint="?attr/colorError"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/etPrice" android:hint="Rate (Unit)" android:inputType="numberDecimal" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="14sp"/>
        <EditText android:id="@+id/etMrp" android:hint="MRP" android:inputType="numberDecimal" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="14sp"/>
        <EditText android:id="@+id/etStock" android:hint="Total Stock" android:inputType="number" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>